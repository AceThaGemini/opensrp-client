                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"
                                android:src="@drawable/register_household" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Household Register"
                                android:textColor="@color/dull_white"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:orientation="horizontal"
                            android:paddingTop="25dp">

                            <TextView
                                android:id="@+id/txt_household_register_client_count"
                                style="@style/CustomFontTextViewStyle.Badge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="0000M"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_household_register_client_plus_members_count"
                                style="@style/CustomFontTextViewStyle.Badge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="0000 H"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
