<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.opensrp.bpm.MainBPM" >

    <TextView
        android:id="@+id/main_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="31dp"
        android:text="@string/main_welcome" />

    <TextView
        android:id="@+id/main_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_welcome"
        android:layout_alignBottom="@+id/main_welcome"
        android:layout_toRightOf="@+id/main_welcome" />

    <Button
        android:id="@+id/toMeasurements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Measurements" />

    <Button
        android:id="@+id/toDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toMeasurements"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:onClick="toDevice"
        android:text="Device" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_discovery"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Device Scan"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/list_scan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Device Connected"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/list_connected"
            android:layout_width="fill_parent"
            android:layout_height="600dp" />

    </LinearLayout>




</RelativeLayout>