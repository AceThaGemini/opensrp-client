<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/list_item_height"
    android:weightSum="10">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/profile_info_layout">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/profilepic"
                android:src="@drawable/woman_placeholder"
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.79">

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:text="Medium Text"
                android:id="@+id/name" />

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:text="Medium Text"
                android:textSize="12sp"
                android:id="@+id/motherName" />
            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:text="Medium Text"
                android:textSize="12sp"
                android:id="@+id/village" />
            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:text="Medium Text"
                android:textSize="12sp"
                android:id="@+id/age" />
            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:text="Medium Text"
                android:textSize="12sp"
                android:id="@+id/gender" />

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="73"
            android:orientation="horizontal">

            <include
                android:id="@+id/layout_hb07"
                layout="@layout/anak_frame_immunization_layout"/>

            <ImageView
                android:layout_width="@dimen/smart_register_client_divider_height"
                android:layout_height="fill_parent"
                android:src="@color/smart_register_client_divider_color"/>

            <include
                android:id="@+id/layout_bcg"
                layout="@layout/anak_frame_immunization_layout"/>

            <ImageView
                android:layout_width="@dimen/smart_register_client_divider_height"
                android:layout_height="fill_parent"
                android:src="@color/smart_register_client_divider_color"/>

            <include
                android:id="@+id/layout_dpt_hb1_polio2"
                layout="@layout/anak_frame_immunization_layout"/>

            <ImageView
                android:layout_width="@dimen/smart_register_client_divider_height"
                android:layout_height="fill_parent"
                android:src="@color/smart_register_client_divider_color"/>

            <include
                android:id="@+id/layout_dpt_hb2_polio3"
                layout="@layout/anak_frame_immunization_layout"/>

            <ImageView
                android:layout_width="@dimen/smart_register_client_divider_height"
                android:layout_height="fill_parent"
                android:src="@color/smart_register_client_divider_color"/>

            <include
                android:id="@+id/layout_dpt_hb3_polio4"
                layout="@layout/anak_frame_immunization_layout"/>

            <ImageView
                android:layout_width="@dimen/smart_register_client_divider_height"
                android:layout_height="fill_parent"
                android:src="@color/smart_register_client_divider_color"/>

            <include
                android:id="@+id/layout_campak"
                layout="@layout/anak_frame_immunization_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="14"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
            android:layout_width="@dimen/smart_register_client_divider_height"
            android:layout_height="fill_parent"
            android:src="@color/smart_register_client_divider_color"/>

    <ImageView
            android:layout_width="@dimen/smart_register_client_divider_height"
            android:layout_height="fill_parent"
            android:src="@color/smart_register_client_divider_color"/>


</LinearLayout>