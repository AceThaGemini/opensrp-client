<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:id="@+id/login_layout"
    android:orientation="horizontal"
    android:background="@drawable/login_background"
    android:baselineAligned="true" android:weightSum="8">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:id="@+id/logo_layout"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:layout_marginTop="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp">

        <ImageView
            android:id="@+id/login_logo"
            android:contentDescription="@string/image_description"
            android:src="@drawable/homestacks"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:layout_gravity="top|left"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:src="@drawable/opensrp_label"
            android:id="@+id/imageView"
            android:scaleType="fitXY"
            android:layout_gravity="top|right"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/login_logo"
            android:layout_marginTop="20dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#feffff"
                android:textSize="70dp"
                android:text="Vaccinator"
                android:typeface="sans"
                android:layout_weight="0"
                android:layout_gravity="right|top"
                android:id="@+id/textView"
                android:layout_below="@+id/imageView"
                android:layout_toEndOf="@+id/login_logo" />

            <TextView
                android:id="@+id/login_build"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#90c4dc"
                android:textSize="16sp"
                android:typeface="sans"
                android:text="build and release info"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:layout_below="@+id/textView"
                android:layout_alignStart="@+id/textView" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo_spacer_below"
            android:layout_weight="1"
            android:contentDescription="@string/spacer"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <!--<TextView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="45dp"-->
                <!--android:paddingTop="5dp"-->
                <!--android:layout_weight="5"-->
                <!--android:text="@string/userNameText"-->
                <!--android:textSize="20sp"-->
                <!--android:textColor="#fefcfc" />-->

            <EditText
                android:id="@+id/login_userNameText"
                android:inputType="textNoSuggestions|textFilter|textVisiblePassword"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:hint="@string/userNameEditText"
                android:ems="10"
                android:layout_weight="8"
                android:typeface="sans"
                android:singleLine="true"
                android:background="@drawable/rounded_corner_edittext"
                android:layout_gravity="center_vertical"
                android:textColorHint="#bfbfbf"
                android:textColor="#666666"
                android:paddingLeft="5dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <!--<TextView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="5"
                android:paddingTop="15dp"
                android:text="@string/passwordText"
                android:textSize="20sp"
                android:textColor="#faf8f8" />-->

            <EditText
                android:id="@+id/login_passwordText"
                android:inputType="textNoSuggestions|textFilter|textVisiblePassword"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="8"
                android:hint="@string/passwordEditText"
                android:ems="10"
                android:background="@drawable/rounded_corner_edittext"
                android:typeface="sans"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColorHint="#bfbfbf"
                android:textColor="#666666"
                android:paddingLeft="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">

        <Button
            android:id="@+id/login_loginButton"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="@string/login_text"
            android:onClick="login"
            android:ems="10"
            android:background="@drawable/login_button"
            android:shadowColor="#ffffff"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="0.5"
            android:textColor="#666666"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="right|top"
            android:layout_weight="8" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>