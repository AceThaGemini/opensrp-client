<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="#eeeeee"
    android:orientation="horizontal"
    android:weightSum="20">

    <LinearLayout
        android:id="@+id/woman_profile_info_layout1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="8"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/woman_id"
            style="@style/CustomFontTextViewStyle.ListView.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Woman ID of 4teen"
            android:textColor="@color/button_material_dark"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/woman_name"
            style="@style/CustomFontTextViewStyle.ListView.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Woman Name"
            android:textColor="@color/light_blue"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/woman_husbandname"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:singleLine="false"
            android:text="Husband name long long"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/woman_fathername"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:singleLine="false"
            android:text="father name long long"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/woman_profile_info_layout"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="4"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/woman_epi_number"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EPI Number"
                android:textColor="@color/light_blue"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/woman_age"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99 years"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>

