    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="4"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/woman_last_vaccine_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:scaleType="fitXY"
                android:src="@drawable/ic_yes_small" />

            <TextView
                android:id="@+id/woman_last_vaccine"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Vaccine Name"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/woman_last_visit_date"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Vaccine Date"
            android:textSize="17sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/woman_next_visit_holder"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:background="@color/transparent_blue">

        <ImageView
            android:id="@+id/next_vaccine_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="15dp"
            android:alpha=".6"
            android:scaleType="fitEnd"
            android:src="@drawable/syringe" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/woman_next_visit_vaccine"
                    style="@style/CustomFontTextViewStyle.ListView.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="TT X"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/woman_next_visit_date"
                    style="@style/CustomFontTextViewStyle.ListView.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22-00-2222"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
