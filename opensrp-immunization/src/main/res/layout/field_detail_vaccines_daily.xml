<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">


    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp">

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            style="@style/CustomFontTextViewStyle.ListView.Medium"
            android:text="Daily Used Stock Summary - "
            android:textAlignment="center"
            android:textColor="@color/text_black"
            android:layout_gravity="center_horizontal" />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/reporting_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            style="@style/CustomFontTextViewStyle.ListView.Medium"
            android:text="Day"
            android:textColor="@color/text_black"/>

    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/stock_vaccine_table_daily"
        android:layout_margin="1dp"
        android:padding="1dp" android:background="#eeeeee"
        android:stretchColumns="*">

        <TableRow android:background="@color/status_bar_text_almost_white">
            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="12sp"
                android:text="Day"
                android:textColor="@color/text_black"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="12sp"
                android:text="BCG"
                android:textColor="@color/text_black"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="12sp"
                android:text="OPV"
                android:textColor="@color/text_black"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="12sp"
                android:text="IPV"
                android:textColor="@color/text_black"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="12sp"
                android:text="PCV"
                android:textColor="@color/text_black"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="12sp"
                android:text="PENTA"
                android:textColor="@color/text_black"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="12sp"
                android:text="MEASLES"
                android:textColor="@color/text_black"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="12sp"
                android:text="TT"
                android:textColor="@color/text_black"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding" android:textStyle="bold"
                android:textSize="12sp"
                android:text="TOTAL"
                android:textColor="@color/text_black"/>

        </TableRow>
    </TableLayout>

</LinearLayout>