<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:weightSum="11"
    android:layout_height="@dimen/list_item_height"
    android:background="#eeeeee">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:id="@+id/household_profile_info_layout"
        android:layout_weight="3"
        android:background="#ffffff"
        android:layout_marginRight="1dp">

        <ImageView
            android:layout_width="@dimen/client_profile_pic_width"
            android:layout_height="80dp"
            android:id="@+id/household_profilepic"
            android:src="@drawable/household_profile"
            android:layout_margin="2dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp">

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HH Identifier"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:id="@+id/household_id"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:text="HH Program Client ID"
                android:id="@+id/household_head_program_client_id"
                android:textSize="14sp"
                android:textColor="@color/button_material_dark" />

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:text="HH full name"
                android:id="@+id/household_name"
                android:textColor="@color/light_blue"
                android:textSize="14sp"
                android:textStyle="bold" />

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:text="13-12-2016 (23 years)"
                android:id="@+id/household_head_age"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:background="#ffffff"
        android:layout_marginRight="1dp">

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other members"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:id="@+id/household_member_count"
            android:textSize="14sp" />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Woman Rep members"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:id="@+id/household_women_rep_member_count"
            android:textSize="14sp"
            android:textColor="@color/pink" />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Children members"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:id="@+id/household_child_member_count"
            android:textSize="14sp"
            android:textColor="@android:color/holo_orange_dark" />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unregistered members"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:id="@+id/household_unregistered_member_count"
            android:textSize="14sp"
            android:textColor="@color/error_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:background="#ffffff"
        android:layout_marginRight="1dp">

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address of person collected\nnext line and making address bigger and bigger"
            style="@style/CustomFontTextViewStyle.ListView.Normal.TwoLine"
            android:id="@+id/household_address"
            android:inputType="textMultiLine"
            android:textSize="14sp"
            android:maxLines="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:background="#ffffff"
        android:layout_marginRight="1dp">

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:id="@+id/household_contact"
            android:text="033438488455"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:background="@color/light_blue"
        android:id="@+id/household_add_member"
        android:layout_marginRight="1dp">

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:textSize="19sp"
            android:text="@string/household_add_member"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>