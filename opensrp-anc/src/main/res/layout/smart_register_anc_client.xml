<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="#eeeeee"
    android:orientation="horizontal"
    android:weightSum="20">

    <LinearLayout
        android:id="@+id/child_profile_info_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="10"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/anc_profilepic"
            android:layout_width="@dimen/client_profile_pic_width"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/pk_woman_avtar" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/patient_id"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient ID"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/patient_name"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:singleLine="false"
                android:text="Patient's Name"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/patient_husbandname"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:singleLine="false"
                android:text="Husband's Name"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="4"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/anc_birthdate"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DD-MM-YYYY"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/anc_age"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="## Years"
            android:textSize="17sp" />
    </LinearLayout>

