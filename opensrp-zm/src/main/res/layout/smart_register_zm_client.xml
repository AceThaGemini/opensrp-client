<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/list_item_height"
    android:weightSum="23" android:background="#eeeeee" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_height="80dp"
            android:id="@+id/profilepic"
            android:layout_margin="2dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:background="@color/dull_white"
            android:src="@drawable/profile_user"
            android:layout_width="77dp" />

        <TextView
            android:text="HHH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hhh_flag"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@color/light_blue"
            android:textSize="13sp" />
    </FrameLayout>
    </LinearLayout>

    <LinearLayout
    android:layout_height="match_parent"
    android:layout_width="0dp"
    android:layout_weight="4"
        android:background="#ffffff"
        android:layout_marginRight="1dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CustomFontTextViewStyle.ListView.Medium"
            android:text="My Full Name"
            android:textStyle="bold"
            android:id="@+id/name"
            android:textColor="@color/light_blue"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="99 years"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:id="@+id/age"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="W/O- Guarrdian name"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:id="@+id/guardian_name"
            android:textSize="17sp"
            android:maxLines="2"
            android:singleLine="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent" android:background="#ffffff"
        android:layout_weight="5"
        android:layout_marginRight="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:id="@+id/contact_number"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52 a, Zaman Town, Korangi, Karachi"
                android:id="@+id/address"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:textSize="17sp"
                android:layout_gravity="top"
                android:singleLine="false"
                android:maxLines="4" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:background="#ffffff"
        android:layout_marginRight="1dp">

        <TextView
            android:text="Last Encounters Happened"
            android:textStyle="bold"
            android:id="@+id/last_events"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="top"
            android:maxLines="4"
            android:singleLine="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="5"
        android:background="#ffffff"
        android:id="@+id/obs_container">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/obs_table"
            android:layout_margin="1dp"
            android:background="@android:color/white">

            <include layout="@layout/tablerow_small_compact"/>

        </TableLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="0dp" android:orientation="horizontal"
        android:layout_height="fill_parent" android:layout_weight="3"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/register_household"
            android:src="@drawable/register_household"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:background="@color/dull_white"
            android:layout_height="match_parent"
            android:layout_width="60dp" />

        <ImageView
            android:id="@+id/register_vaccination"
            android:src="@drawable/syringe"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:background="@color/dull_white"
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:alpha="0.75"
            android:padding="10dp"
            android:layout_gravity="right" />

    </LinearLayout>
</LinearLayout>
