<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="20sp">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/client_profile_pic_width"
            android:layout_height="80dp"
            android:id="@+id/household_profilepic"
            android:src="@drawable/household_profile"
            android:layout_margin="5dp"
            android:scaleType="fitXY" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/household_detail_info_table1"
            android:background="@drawable/listview_background_rounded">
        </TableLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50sp">

        <ImageView
            android:layout_width="@dimen/client_profile_pic_width"
            android:layout_height="80dp"
            android:id="@+id/household_pic"
            android:src="@drawable/household_house"
            android:layout_margin="5dp"
            android:scaleType="fitXY" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/household_detail_info_table2"
            android:background="@drawable/listview_background_rounded">
        </TableLayout>


    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/addMember"
            android:textSize="25sp"
            android:layout_weight="10"
            android:background="@color/Grey" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20sp"
        android:weightSum="11">



        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/individualList"
            android:paddingTop="10sp">



        </ListView>




    </LinearLayout>

</LinearLayout>