<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#ff313131">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_texture"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                android:layout_gravity="center_vertical">

                <ImageButton
                        android:id="@+id/household_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/household"
                        style="@style/ImageButton.Home.Register"
                    android:scaleType="matrix" />

                <org.ei.opensrp.view.customControls.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/hh_register_title_in_short"
                        android:textStyle="bold"
                        style="@style/CustomFontTextViewStyle.Home.RegisterName"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/register_label"
                        style="@style/CustomFontTextViewStyle.Home.RegisterLabel"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                        android:id="@+id/home_register_client_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomFontTextViewStyle.Badge"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                <ImageButton
                        android:id="@+id/elco_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/elco"
                        style="@style/ImageButton.Home.Register"
                    android:scaleType="matrix" />

                <org.ei.opensrp.view.customControls.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/elco_register"
                        style="@style/CustomFontTextViewStyle.Home.RegisterName"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/register_label"
                        style="@style/CustomFontTextViewStyle.Home.RegisterLabel"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                        android:id="@+id/elco_register_client_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomFontTextViewStyle.Badge"/>
            </FrameLayout>



            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                <ImageButton
                        android:id="@+id/btn_anc_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/anc"
                        style="@style/ImageButton.Home.Register"
                    android:scaleType="matrix" />

                <org.ei.opensrp.view.customControls.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_anc_label"
                        style="@style/CustomFontTextViewStyle.Home.RegisterName"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/register_label"
                        style="@style/CustomFontTextViewStyle.Home.RegisterLabel"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                        android:id="@+id/txt_anc_register_client_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomFontTextViewStyle.Badge"/>

            </FrameLayout>

            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                android:visibility="visible">

                <ImageButton
                        android:id="@+id/btn_pnc_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/pnc"
                        style="@style/ImageButton.Home.Register"
                    android:scaleType="matrix" />

                <org.ei.opensrp.view.customControls.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pnc_register_title_in_short"
                        style="@style/CustomFontTextViewStyle.Home.RegisterName"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/register_label"
                        style="@style/CustomFontTextViewStyle.Home.RegisterLabel"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                        android:id="@+id/txt_pnc_register_client_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomFontTextViewStyle.Badge"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/btn_child_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/child"
                    style="@style/ImageButton.Home.Register"
                    android:scaleType="matrix" />

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_child_label"
                    style="@style/CustomFontTextViewStyle.Home.RegisterName"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_label"
                    style="@style/CustomFontTextViewStyle.Home.RegisterLabel"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:id="@+id/txt_child_register_client_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomFontTextViewStyle.Badge"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_nutrition_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/nutrition_reg"
                    style="@style/ImageButton.Home.Register"
                    android:scaleType="matrix" />

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_nutrition_label"
                    android:textStyle="bold"
                    style="@style/CustomFontTextViewStyle.Home.RegisterName"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_label"
                    style="@style/CustomFontTextViewStyle.Home.RegisterLabel"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:id="@+id/txt_nutrition_register_client_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomFontTextViewStyle.Badge"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/btn_adolescent_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/adolescent"
                    style="@style/ImageButton.Home.Register"
                    android:scaleType="matrix" />

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/adolescent_register_label"
                    style="@style/CustomFontTextViewStyle.Home.RegisterName"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_label"
                    style="@style/CustomFontTextViewStyle.Home.RegisterLabel"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:id="@+id/txt_adolescent_register_client_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomFontTextViewStyle.Badge"/>
            </FrameLayout>



            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/btn_injectable_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/injectable"
                    style="@style/ImageButton.Home.Register"
                    android:scaleType="matrix" />

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_injectable_label"
                    style="@style/CustomFontTextViewStyle.Home.RegisterName"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_label"
                    style="@style/CustomFontTextViewStyle.Home.RegisterLabel"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:id="@+id/txt_injectable_register_client_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomFontTextViewStyle.Badge"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/btn_death_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/death"
                    style="@style/ImageButton.Home.Register"
                    android:scaleType="matrix" />

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_death_label"
                    style="@style/CustomFontTextViewStyle.Home.RegisterName"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_label"
                    style="@style/CustomFontTextViewStyle.Home.RegisterLabel"/>

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:id="@+id/txt_death_register_client_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomFontTextViewStyle.Badge"/>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

        <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/btn_reporting"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_reporting"
                android:drawablePadding="5dp"
                android:paddingLeft="185dp"
                android:paddingRight="185dp"
                android:text="@string/str_reporting"
                style="@style/CustomFontTextViewStyle.Home.Buttons"/>

        <org.ei.opensrp.view.customControls.CustomFontTextView
                android:id="@+id/btn_videos"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_tv"
                android:drawablePadding="5dp"
                android:paddingLeft="200dp"
                android:paddingRight="200dp"
                android:text="@string/str_videos"
                style="@style/CustomFontTextViewStyle.Home.Buttons"/>

    </LinearLayout>

</LinearLayout>
