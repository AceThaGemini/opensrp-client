<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/client_list_header_dark_grey">

    <include layout="@layout/womandetail_nav_bar"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/smart_register_client_divider_height"
        android:src="@color/smart_register_client_divider_color"
        android:id="@+id/imageView5" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:layout_weight="2"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:text="Basic Information"
            android:id="@+id/woman_detail_information"
            style="@style/CustomFontTextViewStyle.ListView.Bold.NoPadding"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:layout_gravity="center_vertical|right"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />



        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Today's Date:"
            android:id="@+id/woman_detail_today"
            style="@style/CustomFontTextViewStyle.ListView.Bold.NoPadding"
            android:textColor="@color/text_black"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="left"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/smart_register_client_divider_height"
        android:src="@color/smart_register_client_divider_color"
        android:id="@+id/imageView4" />

    <include
        layout="@layout/woman_detail_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/smart_register_client_divider_height"
        android:src="@color/smart_register_client_divider_color"
        android:id="@+id/imageView3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/clients_header_layout_doses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last 5 Injectable Doses"
                    android:id="@+id/injectabledetails_doses"
                    style="@style/CustomFontTextViewStyle.ListView.Bold.NoPadding"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_margin="2dp"
                        android:id="@+id/dose1_layout">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/imagedose1"
                            android:src="@mipmap/star_off"
                            android:layout_margin="10dp" />

                        <org.ei.opensrp.view.customControls.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            style="@style/CustomFontTextViewStyle"
                            android:text="Dose 1"
                            android:id="@+id/dose_one_label"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Medium Text"
                            android:id="@+id/dose_one"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/text_black"
                            android:layout_marginRight="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_margin="2dp"
                        android:id="@+id/dose2_layout">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/imagedose2"
                            android:src="@mipmap/star_off"
                            android:layout_margin="10dp" />

                        <org.ei.opensrp.view.customControls.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            style="@style/CustomFontTextViewStyle"
                            android:text="Dose 2"
                            android:id="@+id/dose_two_label"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Medium Text"
                            android:id="@+id/dose_two"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/text_black"
                            android:layout_marginRight="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_margin="2dp"
                        android:id="@+id/dose3_layout">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/imagedose3"
                            android:src="@mipmap/star_off"
                            android:layout_margin="10dp" />

                        <org.ei.opensrp.view.customControls.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            style="@style/CustomFontTextViewStyle"
                            android:text="Dose 3"
                            android:id="@+id/dose_three_label"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            style="@style/CustomFontTextViewStyle.ListView.Medium"
                            android:text="Medium Text"
                            android:id="@+id/dose_three"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/text_black"
                            android:layout_marginRight="5dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_margin="2dp"
                        android:id="@+id/dose4_layout">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/imagedose4"
                            android:src="@mipmap/star_off"
                            android:layout_margin="10dp" />

                        <org.ei.opensrp.view.customControls.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            style="@style/CustomFontTextViewStyle"
                            android:text="Dose 4"
                            android:id="@+id/dose_four_label"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            style="@style/CustomFontTextViewStyle.ListView.Medium"
                            android:text="Medium Text"
                            android:id="@+id/dose_four"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/text_black"
                            android:layout_marginRight="5dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_margin="2dp"
                        android:id="@+id/dose5_layout">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/imageViewdose5"
                            android:src="@mipmap/star_off"
                            android:layout_margin="10dp" />

                        <org.ei.opensrp.view.customControls.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            style="@style/CustomFontTextViewStyle"
                            android:text="Dose 5"
                            android:id="@+id/dose_five_label"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            style="@style/CustomFontTextViewStyle.ListView.Medium"
                            android:text="Medium Text"
                            android:id="@+id/dose_five"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/text_black"
                            android:layout_marginRight="5dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/clients_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/summary"
                    android:id="@+id/womandetail_vaccination_summary"
                    style="@style/CustomFontTextViewStyle.ListView.Bold.NoPadding"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/smart_register_client_divider_height"
                android:src="@color/smart_register_client_divider_color" />

            <include layout="@layout/injectable_vaccine_detail" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
