{
  "case_classification_rules": [
    {
      "comment": "HOUSEHOLD: This rule checks whether a given case belongs to Household register",
      "rule": {
        "lookup": "event",
        "fields": [
          {
            "field_name":"event_type",
            "field_value": "New Household Registration",
            "opens_case":["ec_household"]
          }
        ]
      }
    },
    {
      "comment": "ELCO: This rule checks whether a given case belongs to ELCO register",
      "rule": {
        "lookup": "event",
        "fields": [
          {
            "data_segment": "obs",
            "field_name":"fieldCode",
            "field_value": "162699AAAAAAAAAAAAAAAAAAAAAAAAAAAAAA",
            "response_key":"value",
            "response_value": ["1065AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"],
            "closes_case":["ec_pnc"],
            "opens_case":["ec_elco"]
          }
        ]
